---
import AWS from "../icons/AWS.astro";
import Azure from "../icons/Azure.astro";
import Docker from "../icons/Docker.astro";
import GitHub from "../icons/Github.astro";
import Heroku from "../icons/Heroku.astro";
import Postman from "../icons/Postman.astro";
import Vercel from "../icons/Vercel.astro";
---

<!-- Tools -->
<section aria-labelledby="backend-heading" class="bg-white shadow-md p-6 rounded-lg">
    <h3 id="backend-heading" class="text-xl font-bold text-gray-900 mb-4">Herramientas</h3>
    <ul class="space-y-4">
      <li class="flex flex-col sm:flex-row sm:items-center sm:gap-4">
        <GitHub class="w-14 h-14" />
        <span class="font-semibold w-28">Git/GitHub</span>
        <div class="flex-1">
          <div class="bg-gray-200 h-2 rounded" role="progressbar" aria-valuenow="85" aria-valuemin="0" aria-valuemax="100">
            <div class="bg-blue-600 h-2 rounded" style="width: 85%;"></div>
          </div>
        </div>
        <span class="w-24 text-sm text-gray-600">Intermedio</span>
      </li>
      <li class="flex flex-col sm:flex-row sm:items-center sm:gap-4">
        <Docker class="w-14 h-14" />
        <span class="font-semibold w-28">Docker</span>
        <div class="flex-1">
          <div class="bg-gray-200 h-2 rounded" role="progressbar" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100">
            <div class="bg-blue-600 h-2 rounded" style="width: 40%;"></div>
          </div>
        </div>
        <span class="w-24 text-sm text-gray-600">Principiante</span>
      </li>
      <li class="flex flex-col sm:flex-row sm:items-center sm:gap-4">
        <AWS class="w-14 h-14" />
        <span class="font-semibold w-28">AWS</span>
        <div class="flex-1">
          <div class="bg-gray-200 h-2 rounded" role="progressbar" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100">
            <div class="bg-blue-600 h-2 rounded" style="width: 40%;"></div>
          </div>
        </div>
        <span class="w-24 text-sm text-gray-600">Principiante</span>
      </li>
      <li class="flex flex-col sm:flex-row sm:items-center sm:gap-4">
        <Postman class="w-14 h-14" />
        <span class="font-semibold w-28">Postman</span>
        <div class="flex-1">
          <div class="bg-gray-200 h-2 rounded" role="progressbar" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100">
            <div class="bg-blue-600 h-2 rounded" style="width: 80%;"></div>
          </div>
        </div>
        <span class="w-24 text-sm text-gray-600">Intermedio</span>
      </li>
      <li class="flex flex-col sm:flex-row sm:items-center sm:gap-4">
        <Azure class="w-14 h-14" />
        <span class="font-semibold w-28">Azure</span>
        <div class="flex-1">
          <div class="bg-gray-200 h-2 rounded" role="progressbar" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100">
            <div class="bg-blue-600 h-2 rounded" style="width: 30%;"></div>
          </div>
        </div>
        <span class="w-24 text-sm text-gray-600">Principiante</span>
      </li>
      <li class="flex flex-col sm:flex-row sm:items-center sm:gap-4">
        <Vercel class="w-14 h-14" />
        <span class="font-semibold w-28">Vercel</span>
        <div class="flex-1">
          <div class="bg-gray-200 h-2 rounded" role="progressbar" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100">
            <div class="bg-blue-600 h-2 rounded" style="width: 40%;"></div>
          </div>
        </div>
        <span class="w-24 text-sm text-gray-600">Principiante</span>
      </li>
      <li class="flex flex-col sm:flex-row sm:items-center sm:gap-4">
        <Heroku class="w-14 h-14" />
        <span class="font-semibold w-28">Heroku</span>
        <div class="flex-1">
          <div class="bg-gray-200 h-2 rounded" role="progressbar" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100">
            <div class="bg-blue-600 h-2 rounded" style="width: 40%;"></div>
          </div>
        </div>
        <span class="w-24 text-sm text-gray-600">Principiante</span>
      </li>
    </ul>
  </section>