---
import GitHub from "../icons/GitHub.astro";
import Linkedin from "../icons/Linkedin.astro";
---

<div class="flex items-center justify-center min-h-screen px-4 mt-4">
	<div class="bg-white dark:bg-gray-900 p-6 rounded-2xl shadow-2xl flex flex-col w-full max-w-4xl">
		<!-- Form Section -->
		<div class="w-full p-6">
			<h1 class="text-2xl font-semibold text-gray-700 dark:text-white">JT Dev Solution</h1>
			<p class="text-gray-600 dark:text-gray-300 mt-2">Please provide your contact information:</p>
			<p class="text-sm text-gray-500 dark:text-gray-400 mb-4">I will assist you as much as I can.</p>

			<!-- Contact Form -->
			<form id="contact-form" class="space-y-4">
				<input id="name" class="w-full p-3 border dark:border-zinc-800 rounded-lg bg-white dark:bg-gray-800 text-gray-900 dark:text-white" type="text" placeholder="Name" required />
				<input id="email" class="w-full p-3 border dark:border-zinc-800 rounded-lg bg-white dark:bg-gray-800 text-gray-900 dark:text-white" type="email" placeholder="Email Address" required />
				<input id="phone" class="w-full p-3 border dark:border-zinc-800 rounded-lg bg-white dark:bg-gray-800 text-gray-900 dark:text-white" type="tel" placeholder="Phone Number" required />
				<input id="company" class="w-full p-3 border dark:border-zinc-800 rounded-lg bg-white dark:bg-gray-800 text-gray-900 dark:text-white" type="text" placeholder="Company Name" required />
				<input id="title" class="w-full p-3 border dark:border-zinc-800 rounded-lg bg-white dark:bg-gray-800 text-gray-900 dark:text-white" type="text" placeholder="Your Title" required />
				<textarea id="comments" class="w-full p-3 border dark:border-zinc-800 rounded-lg bg-white dark:bg-gray-800 text-gray-900 dark:text-white" placeholder="Comments" rows="3" required></textarea>

				<!-- Contact Button -->
				<button type="button" onclick="sendEmail()" class="w-full p-3 bg-black text-white rounded-lg text-center transition duration-300 hover:bg-gray-800 focus:outline-none focus:ring-2 focus:ring-gray-700">
					Contact Me!
				</button>
			</form>

			<!-- Social Links -->
			<div class="flex justify-center space-x-4 mt-6">
				<a href="https://www.linkedin.com/in/josetrinidadalmeyda/" target="_blank" class="flex items-center space-x-2 bg-white dark:bg-gray-800 p-3 rounded-lg shadow-md hover:via-blue-500">
					<Linkedin class="w-6 h-6 text-blue-600" />
					<span class="text-blue-600 font-semibold">LinkedIn</span>
				</a>
				<a href="https://github.com/ArkhamZX" target="_blank" class="flex items-center space-x-2 bg-white dark:bg-gray-800 p-3 rounded-lg shadow-md hover:via-blue-500">
					<GitHub class="w-6 h-6 text-gray-900 dark:text-white" />
					<span class="text-gray-900 dark:text-white font-semibold">GitHub</span>
				</a>
			</div>
		</div>
	</div>
</div>

<script type="module">
	function sendEmail() {
		const name = document.getElementById("name")?.value || "";
		const email = document.getElementById("email")?.value || "";
		const phone = document.getElementById("phone")?.value || "";
		const company = document.getElementById("company")?.value || "";
		const title = document.getElementById("title")?.value || "";
		const comments = document.getElementById("comments")?.value || "";

		const mailtoLink = `mailto:jtdevelopersolucion@gmail.com?subject=Contact%20Form%20Submission&body=Name:%20${encodeURIComponent(name)}%0AEmail:%20${encodeURIComponent(email)}%0APhone:%20${encodeURIComponent(phone)}%0ACompany:%20${encodeURIComponent(company)}%0ATitle:%20${encodeURIComponent(title)}%0AComments:%20${encodeURIComponent(comments)}`;

		window.location.href = mailtoLink;
	}

	window.sendEmail = sendEmail;
</script>
