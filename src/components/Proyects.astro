---
import {getProjectsFetaturd} from "../utils/getProjectsCollection";
import ProyectCard from "./ProyectCard/ProyectCard.astro";
import TitleSection from "./TitleSection.astro";

const projects = await getProjectsFetaturd();
---

<section
	class="wrapper p-6 md:p-8 mb-12 transition-all duration-500 ease-in-out flex flex-col gap-8"
	id="proyects"
>
	<TitleSection title="Proyectos destacados" />

	<div
		class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6"
	>
		{projects.map((proyect) => (
			<ProyectCard proyect={proyect} />
		))}
	</div>

	<a
		href="/projects"
		class="py-3 px-6 rounded-md border text-black border-white/25 transition-transform duration-300 ease-in-out flex items-center justify-center gap-2 w-full sm:w-auto
    hover:bg-blue-500/50 hover:-translate-y-[2px]
    dark:border-white/50 dark:text-white dark:hover:bg-blue-400/50 dark:hover:-translate-y-[2px]"
	>
		Ver m√°s...
	</a>
</section>