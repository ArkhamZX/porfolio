---
import React from "../icons/React.astro";
import CSS from "../icons/CSS.astro";
import "../styles/global.css";
import HTML from "../icons/HTML.astro";
import JavaScript from "../icons/JavaScript.astro";
import NextJS from "../icons/NextJS.astro";
import Tailwind from "../icons/Tailwind.astro";
import Bootstrap from "../icons/Bootstrap.astro";
---

<section>
    <div class="container mx-auto p-4">
        <h2 class="text-3xl font-bold text-gray-900">Habilidades</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        <div class="bg-white shadow-md p-4">
            <h3 class="text-xl font-bold text-gray-900">Frontend</h3>
            <ul class="mt-2">
            <HTML />
            <CSS />
            <JavaScript />
            <React />
            <NextJS />
            <Tailwind />
            <Bootstrap />
            </ul>
        </div>
        <div class="bg-white shadow-md p-4">
            <h3 class="text-xl font-bold text-gray-900">Backend</h3>
            <ul class="mt-2">
            <li>Node.js</li>
            <li>Express</li>
            <li>Python</li>
            <li>Flask</li>
            <li>Django</li>
            </ul>
        </div>
        <div class="bg-white shadow-md p-4">
            <h3 class="text-xl font-bold text-gray-900">Bases de datos</h3>
            <ul class="mt-2">
            <li>MySQL</li>
            <li>PostgreSQL</li>
            <li>MongoDB</li>
            <li>SQLite</li>
            <li>Redis</li>
            </ul>
        </div>
        </div>
    </div>
</section>

