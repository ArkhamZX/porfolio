---

<Layout title="Inicio" description="Página de inicio de mi portafolio">
	<main class="px-4">
		<SectionContainer class="py-16 md:py-36" />
		<div class="space-y-24">
			<SectionContainer id="habilidades">
				<TitleSection class="text-center"> Habilidades </TitleSection>
				<Skills />
			</SectionContainer>
			<SectionContainer id="sobre-mi">
				<TitleSection> Sobre mí </TitleSection>
				<About />
			</SectionContainer>
		</div>
	</main>
</Layout>

